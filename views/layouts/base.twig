<!DOCTYPE html>
<html {{ site.language_attributes }}>

	{% block head %}
		{% include 'partials/head.twig' %}
	{% endblock %}

	<body class="{{ body_class }}">

		{{ function('wp_body_open') }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e('Skip to content') }}</a>

		<header class="header mx-auto px-20 py-20 md:flex flex-row justify-between">

			{% block header %}
				<h1>
					<a href="{{ site.url }}">{{ site.name }}</a>
				</h1>
				<nav id="nav-main" class="sm:inline-block mt-3 md:m-0">
					{% include 'partials/menu.twig' with { items: menu.get_items } %}
				</nav>
			{% endblock %}

		</header>

		<section id="content" class="content-wrapper mx-auto px-20 pt-10">

			{% block content %}
			{% endblock %}

		</section>

		{{ function('wp_footer') }}
		{% do action('get_footer') %}
	</body>
</html>
